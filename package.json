{
  "name": "@vue-interface/animated-icon",
  "version": "0.1.4",
  "description": "A Vue component wrapper for Lottie with pre-packaged animated icons.",
  "main": "index.js",
  "sideEffect": false,
  "scripts": {
    "watch": "npm run serve",
    "serve": "vue-cli-service build --target lib --name=AnimatedIcon ./main.vue --watch",
    "build": "vue-cli-service build --target lib --name=AnimatedIcon ./main.vue",
    "lint": "vue-cli-service lint",
    "fix": "vue-cli-service lint --fix",
    "build-icons": "node ./.bin/index-icons.js",
    "pre-release": "npm run build; git add . -A; git commit -m 'pre-release commit'",
    "release-patch": "npm run pre-release && npm version patch -m \"%s\" && npm run release;",
    "release-minor": "npm run pre-release && npm version minor -m \"%s\" && npm run release;",
    "release-major": "npm run pre-release && npm version major -m \"%s\" && npm run release;",
    "release": "git add . -A; git commit; git push --tags origin; npm publish;",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs:dev": "./node_modules/.bin/vuepress dev docs",
    "docs:build": "./node_modules/.bin/vuepress build docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vue-interface/animated-icon.git"
  },
  "keywords": [
    "Animated Icons",
    "Lottie",
    "Vue",
    "Component",
    "Tailwind",
    "Bootstrap"
  ],
  "author": "Justin Kimbrell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vue-interface/animated-icon/issues"
  },
  "homepage": "https://github.com/vue-interface/animated-icon/docs#readme",
  "dependencies": {
    "core-js": "^3.6.4",
    "vue": "^2.6.11",
    "vue-lottie": "^0.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "@vuepress/plugin-register-components": "^1.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "lodash.camelcase": "^4.3.0",
    "markdown-it-meta": "0.0.1",
    "postcss-cli": "^7.1.1",
    "vue-template-compiler": "^2.6.11",
    "vuepress": "^1.5.0",
    "vuepress-plugin-template-constants": "^0.2.1"
  }
}
